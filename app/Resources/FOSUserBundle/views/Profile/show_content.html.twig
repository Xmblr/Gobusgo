{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>Организация: {{ user.organization }}</p>
    <p>УНП: {{ user.UNP }}</p>
    <p>Банк: {{ user.bank }}</p>
    <p>Адресс банка: {{ user.addressOfTheBank }}</p>
    <p>Юридический адрес: {{ user.legalAddress }}</p>
    <p>Расчетный счет: {{ user.settlementAccount }}</p>
    <p>Почтовый индекс: {{ user.code }}</p>
    <p>Телефон: {{ user.phone }}</p>
    <p>ФИО: {{ user.fullName }}</p>
    <p>Номер контракта: {{ user.contractNumber }}</p>


    <a href="{{ path('fos_user_change_password') }}">сменить пароль</a>
    <a href="{{ path('fos_user_profile_edit') }}">изменить данные</a>
</div>
