{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row text-center">
        <a href="{{ path('gobusgo_gobusgo_homepage') }}">
            <img src="{{ asset('images/logo-1.png') }}" class="m-b-20" alt="" width="120px;">
        </a>
        <h1>Восстановление пароля</h1>
        <div class="login-form">


            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
            {#{{ form_widget(form) }}#}
            <div class="form-input">
                <div class="Input">
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr':{'class':'input-log', 'placeholder':'Пароль'}}) }}
                </div>
                <div class="Input">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr':{'class':'input-log', 'placeholder':'Подтвердите пароль'}}) }}
                </div>
            </div>
            <div class="Input">
                <input type="submit" class="button-log" value="{{ 'resetting.reset.submit'|trans }}"/>
            </div>
            {{ form_end(form) }}

        </div>
    </div>
</div>