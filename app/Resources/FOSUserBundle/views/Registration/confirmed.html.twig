{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="container">
    <div class="row">
        <h3 class="confirm col-md-6 col-md-push-3">{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</h3>
    {% if targetUrl %}
        <div class="col-md-12 text-center">
            <a class="button-log" href="{{ targetUrl }}">Перейти в личный кабинет</a>
        </div>
    {% endif %}
    </div>
</div>
{% endblock fos_user_content %}
