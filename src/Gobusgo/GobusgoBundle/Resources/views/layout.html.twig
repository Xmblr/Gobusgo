{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {#{{ knp_menu_render('BloggerBlogBundle:Builder:mainMenu') }}#}
    <div class="container-fluid" style="background-color: #f5f5f5;">
        <div class="row">
            <ol class="breadcrumb rd-navbar-inner-header" style="margin-bottom: 0px;">
                {% for breadcrumb_item in knp_menu_get_breadcrumbs_array(knp_menu_get_current_item('GobusgoGobusgoBundle:Builder:mainMenu')) %}
                    {% if not loop.last %}
                        <li typeof="v:Breadcrumb"><a href="{{ breadcrumb_item.uri }}" rel="v:url"
                                                     property="v:title">{{ breadcrumb_item.label }}</a></li>
                    {% else %}
                        <li class="active">{{ breadcrumb_item.label }}</li>
                    {% endif %}
                {% endfor %}
            </ol>
        </div>
    </div>

{% endblock %}

