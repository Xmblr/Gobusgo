{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {#{{ knp_menu_render('BloggerBlogBundle:Builder:mainMenu') }}#}
    <div class="col-md-12" style="background-color: #f5f5f5;">
        <ol class="breadcrumb col-md-push-1 col-md-10" style="margin-bottom: 0px; padding-left: 0px;">
        {% for breadcrumb_item in knp_menu_get_breadcrumbs_array(knp_menu_get_current_item('GobusgoGobusgoBundle:Builder:mainMenu')) %}
            {% if not loop.last %}
                <li typeof="v:Breadcrumb"><a href="{{ breadcrumb_item.uri }}" rel="v:url"
                                             property="v:title">{{ breadcrumb_item.label }}</a></li>
            {% else %}
                <li class="active">{{ breadcrumb_item.label }}</li>
            {% endif %}
        {% endfor %}
    </ol>
    </div>

{% endblock %}

{% block callback %}
    <a href="#win3"><i class="Phone is-animating"></i></a>
    {#Заявка на Обратный звонок#}
    <a href="#win3" class="overlay">
        <div class="phone-call">
            <img src="{{ asset('images/phone.png') }}" height="53px"/>
            <span class="text-left" style="font-size:15px;">Заказать обратный звонок</span>
        </div>
    </a>

    <a href="#x" class="overlay" id="win3">
    </a>
    <div class="popup" style="max-width: 500px;">
        <div class="section bg-gray-light container-fluid">
            <h4 class="m-b-20 text-center">Заказ обратного звонка</h4>
            <div class="container-fluid">

                {{ form_start(callform, { 'action': path('gobusgo_gobusgo_confirm'), 'method': 'POST' }) }}
                {{ form_errors(callform) }}

                <div class="form-group">
                    {{ form_widget(callform.name, {'attr':{'class':'input-log','placeholder':'Как вас зовут?'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(callform.phone, {'attr':{'class':'input-log','placeholder':'Номер телефона'}}) }}
                </div>
                <input type="submit" class="button-log" value="Отправить">
                {{ form_end(callform) }}
            </div>
        </div>

        <a class="close" title="Закрыть" href="#close"></a>
    </div>
    {#Заявка на обратный звонок#}
{% endblock %}

