{% extends '@GobusgoGobusgo/layout.html.twig' %}

{% block breadcrumb %}
    <div class="container-fluid" style="background-color: #f5f5f5;">
<div class="row">
        <ol class="breadcrumb rd-navbar-inner-header" style="margin-bottom: 0px;">
            <li typeof="v:Breadcrumb">
                <a href="{{ path('gobusgo_gobusgo_homepage') }}" rel="v:url" property="v:title">Главная</a>
            </li>
            {% set array = app.request.pathinfo|split('/') %}
            {% if array|length == 2 %}
                <li class="active">Блог</li>
            {% elseif array|length == 3 %}
                <li typeof="v:Breadcrumb">
                    <a href="{{ path('gobusgo_gobusgo_blog') }}" rel="v:url" property="v:title">Блог</a>
                </li>
                <li class="active">{{ seoH1 }}</li>
            {% elseif array|length == 4 %}
                <li typeof="v:Breadcrumb">
                    <a href="{{ path('gobusgo_gobusgo_blog') }}" rel="v:url" property="v:title">Блог</a>
                </li>
                <li typeof="v:Breadcrumb">
                    <a href="{{ path('gobusgo_gobusgo_category', {'categoryUrl': blog.category.url}) }}" rel="v:url" property="v:title">{{ blog.category.h1 }}</a>
                </li>
                <li class="active">{{ blog.h1 }}</li>
            {% endif %}
        </ol>
    </div>
    </div>
{% endblock %}

{% block body %}



{% endblock %}


