            <span class="line-7"></span>
            <span class="line-8"></span>
            <span class="line-9"></span>
            <span class="line-10"></span>
            <div class="Input-1">
                <i class="fa fa-chevron-left" aria-hidden="true"
                   style="position: absolute; margin-left: 160px; margin-top: 17px; font-size: 20px; color: #7d88ff;"></i>

                <input class="Input-text-1" type="text" id="weight" name="weight"
                       required="required" style="position: absolute;" placeholder="Вес, кг"/>
            </div>
            <div class="Input-2">
                <i class="fa fa-chevron-right" aria-hidden="true"
                   style="position: absolute; margin-left: -19px; margin-top: 18px; font-size: 20px; color: #7d88ff;"></i>

