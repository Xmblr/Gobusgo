    <div class="col-md-12">
        <div style="margin-top: 30px;">
            <h4 class="text-left">{{'title_leave_comment'|trans({}, 'SonataNewsBundle') }}:</h4>
        </div>
        {{ form_start(form, { attr: { class: 'form-horizontal', role: 'form' } }) }}
            {#{{ form_widget(form) }}#}
        <div>
            {{ form_row(form.name, {attr: {class: 'input-log' }}) }}
        </div>
        <div>
            {{ form_row(form.email, {attr: {class: 'input-log' }}) }}
        </div>
        <div hidden>
            {{ form_row(form.url, {attr: {class: 'input-log', value: 'none' }}) }}
        </div>
        <div>
            {{ form_row(form.message, {attr: {class: 'input-log' }}) }}
        </div>

        <div class="form-actions" style="margin-top: 5%">
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i>&nbsp;{{'btn_add_comment'|trans({}, 'SonataNewsBundle') }}</button>
        </div>
        {{ form_end(form) }}
    </div>
